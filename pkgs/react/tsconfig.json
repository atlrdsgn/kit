{
  "extends": "@atlrdsgn/tsconfig/kit.json",
  "include": ["src", "."],
  "exclude": ["node_modules", "dist", "prod.package", "build"],
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "rootDir": ".",
    "outDir": "./dist/types",
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "declaration": true,
    "declarationMap": true
  }
}
