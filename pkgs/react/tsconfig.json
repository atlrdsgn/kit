{
  "include": ["src"],
  "exclude": ["dist", "prod.package", "node_modules"],
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "rootDir": "src",
    "outDir": "dist/types",
    "composite": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true,

    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "esnext",
    "allowSyntheticDefaultImports": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,

    "inlineSources": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "target": "es6"
  }
}
