{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "kit-config",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "verbatimModuleSyntax": true,
    "rootDir": "src",
    "outDir": "dist/types",
    "sourceMap": true,
    "noEmit": true
  }
}
