{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json", "NEXT_PUBLIC_SITE_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_SITE_URL"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.{js,jsx,ts,tsx}",
        ".eslintignore",
        ".eslintrc.js",
        ".eslintrc"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
