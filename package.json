{
  "name": "kit",
  "description": "an everâ€“ expanding library of React components by @atlrdsgn",
  "packageManager": "yarn@3.6.3",
  "private": true,
  "workspaces": [
    "pkgs/*",
    "apps/*"
  ],
  "author": "chvndler",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:kit": "turbo run build --filter=kit",
    "build:apps": "turbo build --filter='./apps/*'",
    "build:pkg": "turbo build --filter='./pkgs/*'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "clean": "turbo clean && rm -rf node_modules",
    "pretty": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "eslint": "^8.47.0",
    "eslint-config-atlrdsgn": "*",
    "prettier": "^3.0.2",
    "turbo": "^1.10.13"
  }
}
